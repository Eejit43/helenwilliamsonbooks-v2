{
    "name": "helenwilliamsonbooks",
    "type": "module",
    "scripts": {
        "build": "cp compile.ts compile.js && node compile.js",
        "dev": "pnpm run build && node development.js --enable-source-maps",
        "force-deploy": "railway up",
        "remove-compiled": "find . -type f \\( -name '*.js' -o -name '*.js.map' \\) ! -path './node_modules/*' ! -path './public/scripts/external/*' -delete && find ./public/styles -type f -name '*.css' ! -name 'font-awesome.css' -delete",
        "start": "node --no-warnings --max-old-space-size=100 app.js"
    },
    "dependencies": {
        "@fastify/formbody": "^7.4.0",
        "@fastify/static": "^6.10.2",
        "@fastify/view": "^8.0.0",
        "chalk": "^5.3.0",
        "chokidar": "^3.5.3",
        "consola": "^3.2.3",
        "esbuild": "^0.18.17",
        "esbuild-postcss": "^0.0.4",
        "fastify": "^4.21.0",
        "glob": "^10.3.3",
        "handlebars": "^4.7.7",
        "nodemailer": "^6.9.4",
        "postcss": "^8.4.27",
        "postcss-preset-env": "^9.1.0"
    },
    "devDependencies": {
        "@eejit/eslint-config-typescript": "^2.5.0",
        "@tsconfig/recommended": "^1.0.2",
        "@types/nodemailer": "^6.4.9",
        "prettier": "^3.0.0",
        "prettier-plugin-css-order": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.5",
        "stylelint": "^15.10.2",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-use-nesting": "^4.1.0",
        "tree-kill": "^1.2.2",
        "typescript": "^5.1.6"
    },
    "packageManager": "pnpm@8.6.11"
}
