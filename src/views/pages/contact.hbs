<h2>Contact</h2>
<div id="form-container">
    <noscript>
        <div id="noscript-overlay">
            <p>This form requires JavaScript to function properly! Please enable it and reload!</p>
        </div>
    </noscript>
    <form method="post" action="/contact/submit" id="contact-form" class="row g-3 needs-validation" novalidate>
        <div>
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" style="width: 50%" id="name" autocomplete="name" required />
            <div class="invalid-feedback">Please include your name!</div>
        </div>
        <div>
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" style="width: 50%" id="email" autocomplete="email" required />
            <div class="invalid-feedback">Invalid email!</div>
        </div>
        <div>
            <label for="message" class="form-label">Message</label>
            <textarea type="text" class="form-control" id="message" rows="6" required></textarea>
            <div class="invalid-feedback">Please add a message!</div>
        </div>
        <div>
            <div
                class="g-recaptcha"
                data-callback="recaptchaCompleted"
                data-expired-callback="recaptchaError"
                data-error-callback="recaptchaError"
                data-sitekey="6LcEIsgdAAAAAKsmlmaoN1znHBjYrpKqPV5Wl01L"
                id="recaptcha"
            ></div>
            <input class="form-control d-none" id="recaptcha-message" required />
            <div class="invalid-feedback">Please complete the reCAPTCHA!</div>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">Submit form <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true" id="submit-spinner"></span></button>
        </div>
    </form>
</div>

